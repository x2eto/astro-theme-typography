---
import LayoutLight from "~/layouts/LayoutLight.astro";
import PostLight from "~/components/PostLight.astro";
import { getPosts } from "~/utils";
import Pagination from "~/components/Pagination.astro";

const posts = (await getPosts()).slice(0, 5);

const { translate: t } = Astro.locals;
---

<LayoutLight>
  <ul class="list-none gap-5">
    {posts.map((post) => <PostLight post={post} />)}
    <Pagination
      showLeft={false}
      showPageCount={false}
      rightTitle={t("all_posts")}
      rightUrl={"posts/page/1"}
    />
  </ul>
</LayoutLight>
